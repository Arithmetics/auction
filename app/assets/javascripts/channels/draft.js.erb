App.draft = App.cable.subscriptions.create("DraftChannel", {
  connected() {},
    // Called when the subscription is ready for use on the server

  disconnected() {},
    // Called when the subscription has been terminated by the server

  received(data) {
    if (data.bid != null) {
      $('#bid-list').prepend(data.bid).hide().fadeIn('slow');

      $("#current-bid").fadeOut('slow', function(){
              $('#current-bid').html( "Current Bid: $" + data.amount).fadeIn("slow");
      });

      $('#leading-bidder').html( "Leading Bidder: " + data.leading);
    }
    if (data.nomination != null) {
      $('#switcher').html(data.nomination);
    }

    if (data.player_for_sale != null){
      $('#switcher').html(data.player_for_sale);
    }

  }
}
);
