<h1>2017 Draft</h1>
<% if current_user.auctioneer %>
  <h3> You are the Auctioneer </h3>
<% end %>

<div class="box">

  <% @users.each do |user| %>
    <div class="user-box">
      <p> <%= user.name %><br> $ <%= user.money_remaining(@draft.year).to_s%> </p>
    </div>
  <% end %>
</div>

<div id="switcher">

<% if !@nominated_player %>

  <div id="nomination">
    <%= render partial: 'nomination', locals: { draft: @draft } %>
  </div>

<% else %>

  <div class="box">

    <div id="player_for_sale">
      <%= render partial: 'player_for_sale', locals: { nominated_player: @nominated_player, bid: @bids.first } %>
    </div>

    <% if current_user.auctioneer %>

      <div class="auctioneer">
        <h4>Auctioneer Actions</h4>

        <div id="sell_player">
          <%= render partial: 'sell_player', locals: { bid: @bids.first } %>
        </div>

        <div id="unnominate">
          <%= render partial: 'unnominate', locals: { draft: @draft } %>
        </div>

      </div>

    <% end %>
  </div>

  <% if !current_user.auctioneer %>
    <div class="box">
      <div id="bidding-form" />
        <%= render partial: 'bidding_form', locals: { bid: @bid, nominated_player: @nominated_player, draft: @draft, bids: @bids } %>
      </div>
    </div>
  <% end %>

  <div class="box">
    <h3> Bid History: </h3>
    <ul id='bid-list'>
      <% @bids.each do |bid| %>
        <%= render partial: 'bid', locals: { bid: bid } %>
      <% end %>
    </ul>
  </div>

<% end %>



</div>




<% if !current_user.auctioneer %>
  <div class="box">
    <h3>Your Team</h3>
    <ol>
    <% current_user.drafted_players(@draft.year).each do |player| %>
      <li><%= player[:player].player_name %>, $<%= player[:amount] %></li>
    <% end %>
    </ol>
  </div>
<% end %>














<div class="box">
  <h3>Other Teams</h3>

  <% @users.each do |user| %>
    <div class="other-team">
    <% if user.id != current_user.id  %>

      <h4><%= user.name %></h4>
      <ol>
      <% user.drafted_players(@draft.year).each do |player| %>
        <li><%= player[:player].player_name %>,
            $<%= player[:amount] %>

            <% if current_user.auctioneer %>

              <%= form_for @draft, :url => {:action=> "undo_drafting", :method => :patch, :controller => "drafts"} do |f| %>
              <%= f.hidden_field :year, value: @draft.year %>
                <%= f.hidden_field :player_id, value: player[:player].id %>
                <%= f.submit "Undo Drafting" %>
              <% end %>
            <% end %>

        </li>
      <% end %>
      </ol>
    <% end %>
  </div>
  <% end %>
</div>
