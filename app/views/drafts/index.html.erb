<div class="box">
  <h3>Drafts</h3>
<ul>
<% @drafts.each do |draft| %>
  <li><h4><%= link_to_if(draft.open, draft.year, draft) %>
    <% if !draft.open %>
      - closed!
    <% end %>
    <% if current_user.auctioneer %>
      - <%= link_to "Edit",edit_draft_path(draft) %>
    <% end %>
    </h4>
  </li>
<% end %>
</ul>
</div>
